{% extends "index.twig" %}
{% block title %}
<title>{{ username }}</title>
{% endblock %}



{% block main %}
{% include "components/navbar.twig" %}

<div class="main">
<div class = "userInfo">
{% if profilePic == null %}

<h4><a href="changeProfilepic.php">no profile Pic
<br>
click here to change profile pic</a></h4>

{% else %}

<img src="image/{{ profilePic }}" class="profilePic">
{% endif %}


<p class="username"> @{{ username }} </p>

{% if bio == null %}
<p>add bio by clicking on the edit profile button</p>
{% endif %}

<a href="editProfile.php">edit profile</a>

{{ bio }}

</div>
</div>

{% endblock %}

{% block style %}

<style>
.main{
    height:30vh;
    padding:20px;
    }
.userInfo{
    height:100%;
    width:100%;
    display:flex;
    flex-direction:column;
    align-items:center;
    justify-content:space-around;
    }
.userInfo .username {
    color:#4c334d;
    font-family:monospace;
}
.userInfo h4{
    text-align:center;
}

.userInfo h4 a{
    color:black;
}
.userInfo .profilePic{
    max-width:150px;
    border-radius:50%;
    width:200px;
    height:150px;
    margin:0 auto;
    border: 5px solid lightblue;
    object-fit: cover;
}

</style>
{% endblock %}


